<%# 左側 %>
<div class="col-md-3">
  <h2>User info</h2>

  <%= image_tag current_user.get_profile_image(100,100) %>

  <div class="table-responsive">
    <table class="table">
      <tbody>
        <tr></tr>
        <tr>
          <th>name</th>
          <th><%= current_user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= current_user.introduction %></th>
        </tr>
      </tbody>
    </table>
  </div>

  <div class="row">
    <%=link_to edit_user_path(current_user), class: 'btn btn-outline-secondary btn-block edit_user_110353' do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  </div>


  <h2 class="mt-3">New book</h2>
    <%= form_with model: Book.new do |f| %>
      <div class="form-group">
        <label for="title">Title</label><br>
        <%= f.text_field :title, class: 'form-control title' %>
      </div>
      <div class="form-group">
        <label for="body">Opinion</label><br>
        <%= f.text_area :body, class: 'form-control body' %>
      </div>
      <div class="form-group">
        <%= f.submit 'Create Book', class: 'btn btn-success' %>
      </div>
    <% end %>
</div>