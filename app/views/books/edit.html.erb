<p><%= flash[:notice] %></p>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>

      <% if @book.errors.any? %>
        <h3><%= @book.errors.count %>error prohibited this obj from being <br>saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>




      <%= form_with model: @book, local: true do |f| %>
        <div class="form-group">
          <label for="title">Title</label><br>
          <%= f.text_field :title, class: 'form-control title' %>
        </div>
        <div class="form-group">
          <label for="opinion">Opinion</label>
          <%= f.text_area :body, class: 'form-control opinion' %>
        </div>
        <div class="form-group">
          <%= f.submit 'Update Book', class: 'btn btn-success' %>
        </div>
      <% end %>
      <%= link_to "Show", book_path(@book.id), class: 'book' %>
      |
      <%= link_to "Back", books_path, class: 'back' %>
    </div>
  </div>
</div>

